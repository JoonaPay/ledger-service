# Application Configuration
NODE_ENV=development
PORT=3001
APP_NAME=JoonaPay Ledger Service

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/JoonaPay_Ledger_db

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=ledger-service
KAFKA_GROUP_ID=ledger-service-group
KAFKA_SSL=false

# BlnkFinance Configuration
BLNKFINANCE_URL=https://api.blnkfinance.com
BLNKFINANCE_API_KEY=your_blnkfinance_api_key
BLNKFINANCE_ORGANIZATION=JoonaPay
BLNKFINANCE_TIMEOUT=30000

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Metrics
METRICS_ENABLED=true